}

.comment-item-wrap .comment-item-declaration {
  margin-top: 20rpx;
  color: #333333;
  line-height: 70rpx;
  font-size: 28rpx;
  font-weight: 400;
  word-break: break-word; /* 文本行的任意字内断开 */
