@import '../../style/global.wxss';
page {
  width: 100vw;
}

.severance-detail-page .severance-info {
  margin: 0 auto;
  padding: 26rpx 0 28rpx 30rpx;
  background-color: #fff;
}

.severance-detail-page .swipe-img {
  width: 100%;
  height: 750rpx;
}

.severance-detail-page .severance-info .severance-price {
  display: flex;
  align-items: baseline;
}

.severance-detail-page .severance-info .severance-price-up {
  color: #fa4126;
  font-size: 28rpx;
  position: relative;
  bottom: 4rpx;
  left: 8rpx;
}

.severance-detail-page .severance-info .severance-price .class-severance-price {
  font-size: 64rpx;
  color: #fa4126;
  font-weight: bold;
  font-family: DIN Alternate;
}

.severance-detail-page .severance-info .severance-price .class-severance-symbol {
  font-size: 36rpx;
  color: #fa4126;
}

.severance-detail-page .severance-info .severance-price .class-severance-del {
  position: relative;
  font-weight: normal;
  left: 16rpx;
  bottom: 2rpx;
  color: #999999;
  font-size: 32rpx;
}

.severance-detail-page .severance-info .severance-number {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.severance-detail-page .severance-info .severance-number .sold-num {
  font-size: 24rpx;
  color: #999999;
  display: flex;
  align-items: flex-end;
  margin-right: 32rpx;
}

.severance-detail-page .severance-info .severance-activity {
  display: flex;
  margin-top: 16rpx;
  justify-content: space-between;
}

.severance-detail-page .severance-info .severance-activity .tags-container {
  display: flex;
}

.severance-detail-page
  .severance-info
  .severance-activity
  .tags-container
  .severance-activity-tag {
  background: #ffece9;
  color: #fa4126;
  font-size: 24rpx;
  margin-right: 16rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.severance-detail-page .severance-info .severance-activity .activity-show {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fa4126;
  font-size: 24rpx;
  padding-right: 32rpx;
}

.severance-detail-page .severance-info .severance-activity .activity-show-text {
  line-height: 42rpx;
}

.severance-detail-page .severance-info .severance-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.severance-detail-page .severance-info .severance-title .severance-name {
  width: 600rpx;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 32rpx;
  word-break: break-all;
  color: #333333;
}

.severance-detail-page .severance-info .severance-title .severance-tag {
  width: 104rpx;
  margin-left: 26rpx;
}

.severance-detail-page .severance-info .severance-title .severance-tag .shareBtn {
  border-radius: 200rpx 0px 0px 200rpx;
  width: 100rpx;
  height: 96rpx;
  border: none;
  padding-right: 36rpx !important;
}

.severance-detail-page .severance-info .severance-title .severance-tag .shareBtn::after {
  border: none;
}

.severance-detail-page .severance-info .severance-title .severance-tag .btn-icon {
  font-size: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  color: #999;
}

.severance-detail-page .severance-info .severance-title .severance-tag .btn-icon .share-text {
  line-height: 32rpx;
}

.severance-detail-page .severance-info .severance-intro {
  font-size: 26rpx;
  color: #888;
  line-height: 36rpx;
  word-break: break-all;
  padding-right: 30rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
  overflow: hidden;
}

.spu-select {
  height: 80rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  padding: 30rpx;
  font-size: 28rpx;
}

.spu-select .label {
  margin-right: 30rpx;
  text-align: center;
  flex-shrink: 0;
  color: #999999;
  font-weight: normal;
}

.spu-select .content {
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
}

.spu-select .content .tintColor {
  color: #aaa;
}

.severance-detail-page .desc-content {
  margin-top: 20rpx;
  background-color: #fff;
  padding-bottom: 120rpx;
}

.severance-detail-page .desc-content__title {
  font-size: 28rpx;
  line-height: 36rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 20rpx;
}

.severance-detail-page .desc-content__title .img {
  width: 206rpx;
  height: 10rpx;
}

.severance-detail-page .desc-content__title--text {
  font-size: 26rpx;
  margin: 0 32rpx;
  font-weight: 600;
}

.severance-detail-page .desc-content__img {
  width: 100%;
  height: auto;
}

.severance-bottom-operation {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  padding-bottom: env(safe-area-inset-bottom);
}

.popup-sku-header .popup-sku-header__severance-info .popup-sku__price {
  display: flex;
  align-items: baseline;
  color: #fa4126;
  margin-top: 48rpx;
}

.popup-sku-header
  .popup-sku-header__severance-info
  .popup-sku__price
  .popup-sku__price-num {
  font-size: 64rpx;
  color: #fa4126;
  font-weight: bold;
  font-family: DIN Alternate;
}

.popup-sku-header
  .popup-sku-header__severance-info
  .popup-sku__price
  .popup-sku__price-del {
  position: relative;
  font-weight: normal;
  left: 12rpx;
  bottom: 2rpx;
  color: #999999;
  font-size: 32rpx;
}

.popup-sku-header
  .popup-sku-header__severance-info
  .popup-sku__price
  .popup-sku__price-symbol {
  font-size: 36rpx;
  color: #fa4126;
}

.popup-sku-header
  .popup-sku-header__severance-info
  .popup-sku__price
  .popup-sku__price-max-num {
  font-size: 48rpx;
}

.severance-detail-page .severance-head .t-swiper {
  height: 300rpx !important;
}

