.worry-card {
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 0 0 16rpx 16rpx;
  border-bottom: none;
}

.worry-card__main {
  position: relative;
  display: flex;
  line-height: 1;
  padding: 0;
  background: transparent;
  width: 100%;
  border-radius: 0 0 16rpx 16rpx;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  flex-direction: column;
}

.worry-card__body {
  display: flex;
  flex: 1 1 auto;
  background: #fff;
  border-radius: 0 0 16rpx 16rpx;
  padding: 1rpx 0 0 1rpx;
  flex-direction: row;

  justify-content: space-between; /* 横向中间自动空间 */
  /*border: 1px solid gold;*/
}

.worry-card__left {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  flex: 1 1 auto;
  padding: 16rpx 10rpx 10rpx 12rpx;
  /*border: 1rpx solid #070707;*/
}

.worry-card__right {
  display: flex;
  position: relative;
  flex-direction: row;
  justify-content: flex-start;
  align-items: baseline;
  line-height: 32rpx;
  margin: 4rpx 0 4rpx 0;
  /*border: 1px solid red;*/
}

.worry-card__title {
  flex-shrink: 0;
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
  display: -webkit-box;
  height: 102rpx;
  /*-webkit-box-orient: vertical;*/
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-word;
  width: 445rpx;
  line-height: 36rpx;
  /*border: 1px solid red;*/
}

.worry-card__publishers {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 8rpx 0 0 0;
}

.worry-card__publisher {
  color: #7f7b7a;
  background: transparent;
  font-size: 20rpx;
  padding: 0 0;
  border-radius: 16rpx;
  line-height: 30rpx;
  margin: 10 8rpx 8rpx 0;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  word-break: keep-all;
  text-overflow: ellipsis;
  /*border: 1rpx solid #2662fa;*/
}

.worry-card__thumb {
  flex-shrink: 0;
  position: relative;
  width: 220rpx;
  height: 140rpx;
  /*border: 1px solid #37ff00;*/
  margin: 0 15rpx 0 0;
}

.worry-card__thumb:empty {
  display: none;
  margin: 0;
}

.worry-card__img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  overflow: hidden;
}
